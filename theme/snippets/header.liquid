

<header class="padded padded--tight grid grid--spaced">
	<div class="col header__logotype">
		<a href="/">{{shop.name}}</a>
	</div>

	<nav class="col col--small--12of12 grid grid--middle grid--guttered grid--center" data-navigation>
		{% for link in linklists.main-menu.links %}
		<a href="{{link.url}}" class="col nav__link {% if link.active %}a--focus{% endif %}">{{ link.title }}</a>
		{% endfor %}

		<div class="col grid grid--middle">
			<a href="?login=true" class="nav__link" data-toggle-login>Connexion</a>
			<a href="?cart=true" class="nav__link nav__link--cart spaced" data-toggle-cart>
				<svg class="icon-cart"><use xlink:href="#icon-cart"></use></svg>
				<span id="item_count" data-item-count>{% if cart.item_count > 0 %}{{ cart.item_count }}{% endif %}</span>
			</a>
		</div>
	</nav>
</header>