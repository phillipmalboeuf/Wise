
<section class="admin fades_out fade_out" id="login" data-turbolinks-permanent>
	<a href="#" class="admin__back" data-hide></a>

	<div class="admin__container overlay__container--with_button">
		<div class="padded">
			<div class="grid grid--guttered">
				<div class="col col--6of12">
					{% form 'create_customer' %}
					<label for="email">Créer un compte</label>
					<input type="text" name="customer[first_name]" placeholder="Votre prénom">
					<input type="text" name="customer[last_name]" placeholder="Votre nom de famille">
					<input type="email" name="customer[email]" id="email" placeholder="Votre courriel">
					<input type="password" name="customer[password]" placeholder="Votre mot de passe">

					<button type="submit" class="hide"></button>
					{% endform %}
				</div>

				<div class="col col--6of12">
					
					{% form 'customer_login' %}
					<label for="login_email">Connectez-vous à un compte existant</label>
					<input type="email" name="customer[email]" id="login_email" placeholder="Votre courriel">
					<input type="password" name="customer[password]" placeholder="Votre mot de passe">

					<div class="alert alert--errors" data-errors></div>

					<button type="submit" class="hide"></button>
					{% endform %}
				</div>
			</div>

			<button class="overlay__button" data-submit>Continuer</button>
		</div>
	</div>
</section>


