{% include 'translations' %}

{% assign image = section.settings.image|default: article.image %}

{% assign class = 'article--'|append: article.id %}
{% include 'background', class: class, image: image %}

<a href="{{article.url}}" class="grid grid--full_height grid--full_height--small padded image_back {{section.settings.color}} {{section.settings.horizontal_alignment}} {{section.settings.vertical_alignment}} {{class}}">

  <div class="col col--4of12 col--tablet_portrait--6of12 col--phone--9of12 image_back__content em">
    <h5>
      {{article.published_at|date: '%d.%m.%y'}} /
      {% for tag in article.tags %}
      {% assign first_letter = tag | handleize | first %}
      {% if first_letter != '_' %}
      <span class="slash_seperated">{{tag}}</span>
      {% endif %} 
      {% endfor %} 
    </h5>
    <h2>{{article_title}}</h2>
    <h5>{{article_excerpt}}</h5>
  </div>
  
</a>