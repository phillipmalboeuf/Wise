
{% include 'blog_tags' %}

{% if section.settings.article %}
{% for article in blog.articles %}
  {% if article.handle == section.settings.article %}
  {% assign image = section.settings.image|default: article.image %}
  {% assign class = 'article--'|append: article.id %}
  {% include 'background', class: class, image: image %}

  <a href="{{article.url}}" class="grid grid--full_height grid--full_height--small padded padded--vertically_thick image_back image_back--{{section.settings.color}} {{section.settings.horizontal_alignment}} {{section.settings.vertical_alignment}} {{class}}">
    <div class="col col--4of12 col--tablet_portrait--6of12 col--phone--9of12 em {{section.settings.color}}">
      <h2>{{article.title}}</h2>
      <h5>{{article.excerpt| strip_html}}</h5>
    </div>
  </a>
  {% endif %}
{% endfor %}
{% endif %}

<div class="grid">

{% for article in blog.articles %}
  {% unless article.handle == section.settings.article %}
    {% include 'blog_article' %}
  {% endunless %}
{% endfor %}
  
</div>


{% schema %}
{
  "name": "Journal",
  "settings": [
    {
      "id": "article",
      "type": "article",
      "label": "Featured Article"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background Image"
    },
    {
      "type": "select",
      "id": "color",
      "label": "Text color",
      "default": "white",
      "options": [
        {
          "value": "white",
          "label": "White"
        },
        {
          "value": "black",
          "label": "Black"
        }
      ]
    },
    {
      "type": "select",
      "id": "horizontal_alignment",
      "label": "Horizontal text alignment",
      "default": "left",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ]
    },
    {
      "type": "select",
      "id": "vertical_alignment",
      "label": "Vertical text alignment",
      "default": "top",
      "options": [
        {
          "value": "top",
          "label": "Top"
        },
        {
          "value": "middle",
          "label": "Middle"
        },
        {
          "value": "bottom",
          "label": "Bottom"
        }
      ]
    }
  ]
}
{% endschema %}