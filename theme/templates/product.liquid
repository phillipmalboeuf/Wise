





{% assign on_sale = false %}
{% if product.compare_at_price > product.price %}
  {% assign on_sale = true %}
{% endif %}

{% assign sold_out = true %}
{% if product.available %}
  {% assign sold_out = false %}
{% endif %}


<div class="grid light_grey_back">
  <div class="col col--6of12 slider" data-slider>
    <div class="slider__container" style="width: {{product.images | size}}00%;" data-slider-container>
      {% for image in product.images %}
        <div class="slide" data-slide={{forloop.index0}}>
          <div data-slide-content><img src="{{image.src|img_url: 'original'}}" alt="{{image.alt}}"></div>
        </div>
      {% endfor %}
    </div>

    <div class="slider__button"><button class="button--transparent" data-previous-slide-button><svg class="icon-left"><use xlink:href="#icon-left"></use></svg></button></div>

    <div class="slider__button slider__button--right"><button class="button--transparent" data-next-slide-button><svg class="icon-right"><use xlink:href="#icon-right"></use></svg></button></div>

    <div class="slider__markers">
      {% for image in product.images %}
      <button class="slider__marker {% if forloop.first %}slider__marker--active{% endif %}" data-slide-marker={{forloop.index0}}>{{forloop.index0}}</button>
      {% endfor %}
    </div>
  </div>

  <div class="col col--6of12 padded">
    <p class="p--medium">{{product.tags| join: ' / '}}</p>
    <h2 class="flat_bottom">{{product.title}}</h2>
    {% for variant in product.variants %}
    <p class="p--medium"><em>{{variant.title}}</em></p>
    {% endfor %}

    <div class="big_bottom">
    {{product.description}}
    </div>

    <button data-add-to-cart class="button--full">Add this product to your shopping bag</button>
  </div>
</div>


<div class="grid">
  <div class="col col--7of12">
    
  </div>
  <div class="col col--5of12 text_right padded padded--vertically_thick">
    <h2>Medium hold.</h2>
    <p>Watch the usability video here:</p>
    <button class="button--transparent"><svg class="icon-play icon--medium"><use xlink:href="#icon-play"></use></svg></button>
  </div>
</div>


<section class="padded padded--thick light_grey_back text_center">
  <h2 class="big_bottom">This product respects the following:</h2>

  <div class="grid grid--spaced_around grid--stretch">
    <div class="col">
      <svg class="icon-natural icon--big normal_bottom"><use xlink:href="#icon-natural"></use></svg>
      <p>Natural<br>ingredients</p>
    </div>

    <div class="col">
      <svg class="icon-local icon--big normal_bottom"><use xlink:href="#icon-local"></use></svg>
      <p>Locally sourced<br>ingredients</p>
    </div>

    <div class="col">
      <svg class="icon-healthy icon--big normal_bottom"><use xlink:href="#icon-healthy"></use></svg>
      <p>Healthy<br>ingredients</p>
    </div>

    <hr class="col hr--vertical">

    <div class="col">
      <svg class="icon-reusable icon--big normal_bottom"><use xlink:href="#icon-reusable"></use></svg>
      <p>Reusable<br>container</p>
    </div>  

    <div class="col">
      <svg class="icon-recyclable icon--big normal_bottom"><use xlink:href="#icon-recyclable"></use></svg>
      <p>Recyclable<br>materials</p>
    </div>

    <div class="col">
      <svg class="icon-reduced icon--big normal_bottom"><use xlink:href="#icon-reduced"></use></svg>
      <p>Reduced usage<br>of materials</p>
    </div>

    <div class="col">
      <svg class="icon-sustainable icon--big normal_bottom"><use xlink:href="#icon-sustainable"></use></svg>
      <p>Usage of<br>renewable materials</p>
    </div>
  </div>
</section>



