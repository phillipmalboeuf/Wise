
{% include 'translations'  %}

<div class="padded padded--thick page">
	<div class="grid grid--center page__content">
		<div class="col col--6of12 col--tablet_landscape--8of12 col--tablet_portrait--10of12 col--phone--12of12">
			{% assign path = request.path|replace_first:'/',''|replace:'/','_' %}
			<h2 class="text_center big_bottom">{% if lang == 'fr' %}{{settings[path]}}{% else %}{{ page.title }}{% endif %}</h2>
			{{ page.content }}
		</div>
	</div>
</div>